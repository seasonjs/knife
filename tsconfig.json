{
  "compilerOptions": {
    "noEmit": false,
    "target": "es2016",
    "declaration": true,
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "declarationDir": "./dist/src",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2021.promise"
    ]
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
